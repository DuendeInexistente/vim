##########################
#     Forms              #
##########################
snippet options_from_collection_for_select
	options_from_collection_for_select(@people, 'id', 'name', 1)
snippet form_for
	<%= form_for :test, url: root_path do |f| %>
	
	  <%= f.hidden_field :person_id %>
	
	  <div class="form-group">
	    <%= f.label :name %>
	    <%= f.text_field :name, class: 'form-control', placeholder: 'Enter name' %>
	  </div>
	
	  <div class="form-group">
	    <%= f.label :notes %>
	    <%= f.text_area :notes, class: 'form-control', rows: '3', placeholder: 'Enter notes' %>
	  </div>
	
	  <div class="form-group">
	    <%= f.label :email_address %>
	    <%= f.email_field :email_address, class: 'form-control', placeholder: 'Enter email' %>
	  </div>
	
	  <div class="form-group">
	    <%= f.label :password %>
	    <%= f.password_field :password, class: 'form-control', placeholder: 'Password', required: 'required' %>
	  </div>
	
	  <div class="form-group">
	    <%= f.label :file %>
	    <%= f.file_field :file %>
	    <p class="help-block">Example block-level help text here.</p>
	  </div>
	
	  <div class="form-group">
	    <%# use checkbok-inline for inline %>
	    <div class="checkbox">
	      <label>
	        <%= f.check_box :paid %>
	        Paid
	      </label>
	    </div>
	  </div>
	
	  <div class="form-group">
	    <%= f.label :gender %>
	    <%= f.select(
	        :gender,
	        options_for_select(['male', 'female']),
	        {
	          prompt: 'Select a gender',
	          include_blank: true
	        },
	        {
	          class: 'form-control',
	          required: 'required'
	        }
	    ) %>
	  </div>
	
	  <div class="form-group">
	    <%# use radio-inline for inline %>
	    <div class="radio">
	      <label>
	        <%= f.radio_button :gender, 'Male' %>
	        Male
	      </label>
	    </div>
	    <%# use radio-inline for inline %>
	    <div class="radio">
	      <label>
	        <%= f.radio_button :gender, 'Female' %>
	        Female
	      </label>
	    </div>
	  </div>
	
	  <%= f.submit nil, class: 'btn btn-primary' %>
	
	<% end %>

